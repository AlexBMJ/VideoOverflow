@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <NavMenu @ref="_navMenu"/>
    </div>

    <main>
        <MudAppBar Style="position: sticky; top: 0;">
            <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit"
                           Edge="Edge.Start" OnClick="@(() => _navMenu?.Toggle())"/>
            <MudSpacer/>
            <img src="icon.svg" height="40px"/>
            <MudSpacer/>
            <LoginDisplay/>
        </MudAppBar>
        <MudContainer>
            @Body
        </MudContainer>
    </main>
</div>

@code {
    private NavMenu? _navMenu;

}
