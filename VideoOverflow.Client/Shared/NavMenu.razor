<MudLayout>
    <MudDrawer @bind-Open="@_open" Elevation="2" Variant="DrawerVariant.Persistent">
        <MudNavMenu>
            <MudLayout Style="height: 3.45rem;">
                <MudIcon Icon="VideoOverflow.Client/wwwroot/icon.svg"></MudIcon>
                <MudText Typo="Typo.h6" Class="px-4">Video Overflow</MudText>
            </MudLayout>
            <MudDivider Class="my-2"/>
            <MudNavLink Href="/home">Home</MudNavLink>
            <MudNavLink Href="/browse">Browse</MudNavLink>
            <MudNavLink Href="/add">Add</MudNavLink>
            <MudNavLink Href="/claims">Claims</MudNavLink>
        </MudNavMenu>
    </MudDrawer>
    <div></div>
</MudLayout>

@code {
    private bool _open = true;

    public void Toggle() {
        _open = !_open;
        StateHasChanged();
    }
}
