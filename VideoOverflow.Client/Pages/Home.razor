@page "/home"
@using System.Net.Mime
@inject NavigationManager _navigation
<PageTitle>Home</PageTitle>
<AuthorizeView>
    <Authorized>
        <MudPaper Style="height: 400px" Class="d-flex align-center justify-center">
            <MudContainer Style="flex-direction: column; width: 200px" Class="d-flex align-center justify-center" >
                <MudText Typo="Typo.h1">Welcome!</MudText>
            </MudContainer>
        </MudPaper>
    </Authorized>
    <NotAuthorized>
        <MudPaper Style="height: 400px" Class="d-flex align-center justify-center page-background-class">
            <MudContainer Style="flex-direction: column; width: 200px" Class="d-flex align-center justify-center" >
                <MudText Typo="Typo.h1">Welcome!</MudText>
                <MudButton Variant="Variant.Filled" OnClick="@LogIn" EndIcon="@Icons.Material.Filled.Login" Style="background-color: yellowgreen; color: white; width: 200px; height: 60px; margin-top: 30px">
                    Log In
                </MudButton>
            </MudContainer>
        </MudPaper>
    </NotAuthorized>
</AuthorizeView>

<MudCarousel Style="height:200px;" ShowArrows="@arrows" ShowDelimiters="@delimiters" AutoCycleTime="@cycleTimer" AutoCycle="@autocycle" TData="object">
    <MudCarouselItem Transition="transition" Color="@Color.Primary">
        <div class="d-flex" style="height:100%">
            <MudIcon Class="mx-auto my-auto" Icon="VideoOverflow.Client/wwwroot/icon-192.png" />
        </div>
    </MudCarouselItem>
    <MudCarouselItem Transition="transition" Color="@Color.Secondary">
        <div class="d-flex" style="height:100%">
            <MudIcon Class="mx-auto my-auto" src="icon-192.png" Size="@Size.Large" />
        </div>
    </MudCarouselItem>
    <MudCarouselItem Transition="transition">
        <div class="d-flex" style="height:100%">
            <MudIcon Class="mx-auto my-auto" Icon="VideoOverflow.Client/wwwroot/icon-192.png" Color="@Color.Primary" Size="@Size.Large" />
        </div>
    </MudCarouselItem>
</MudCarousel>



@code
{
    private bool arrows = false;
    private bool delimiters = true;
    private bool autocycle = true;
    private Transition transition = Transition.Slide;
    private TimeSpan cycleTimer = new TimeSpan(0, 0, 0, 10);
    private void LogIn()
    {
        _navigation.NavigateTo($"authentication/login?returnUrl={Uri.EscapeDataString(_navigation.Uri)}");
    }
}